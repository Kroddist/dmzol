<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="lastprogram.MainPage"
             Title="База данных «Страны»">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="18">
            <Label Text="Демонстрация запросов LINQ к базе «Страны»"
                   Style="{StaticResource Headline}"
                   SemanticProperties.HeadingLevel="Level1" />

            <Label Text="Репозиторий имитирует таблицу SQL Server, каждая секция ниже — результат конкретного задания."
                   Style="{StaticResource Body}" />

            <VerticalStackLayout x:Name="ResultsLayout" Spacing="16" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
